# ios/Podfile — РАБОЧАЯ ВЕРСИЯ 2025 ГОДА

platform :ios, '12.0'                     # ← Понижаем до 12.0 (iOS 18+ требует именно так!)
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# ←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←
# КРИТИЧЕСКИ ВАЖНЫЕ СТРОКИ — БЕЗ НИХ КРАШИТСЯ НА iOS 18+
install! 'cocoapods', :deterministic_uuids => false
# ←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←←

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcconfig_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcconfig_path)
    raise "#{generated_xcconfig_path} must exist. Если нет — выполни `flutter pub get` в корне проекта."
  end

  File.foreach(generated_xcconfig_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcconfig_path}. Выполни `flutter pub get`."
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # Обязательно 12.0 или выше, но не больше, чем platform выше
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      
      # Фиксы для iOS 17/18
      config.build_settings['OTHER_SWIFT_FLAGS'] = '$(inherited) -no-verify-emitted-module-interface'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64' # если собираешь на M1/M2 Mac
    end
  end
end